<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <div class="ml-auto">
        <%if(username === undefined) { %>
          <form class="form-inline" action="/login" method="POST">
          <input class="form-control mr-sm-2" type="text" name="username" placeholder="Username" aria-label="Username">
          <button class="btn btn-outline-secondary btn-md my-2 my-sm-0 ml-3" type="submit">Submit</button>
          </form>
        <% } else { %>
          <form class="form-inline" action="/logout" method="POST">
            <a class="navbar-brand navbar-darks"><%= username %></a>
            <button class="btn btn-outline-secondary btn-md my-2 my-sm-0 ml-3" type="submit">Logout</button>
          </form>
        <% } %>
      </div>
  </nav>
</header>